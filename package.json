{
	"name": "gvastuu",
	"private": true,
	"sideEffects": false,
	"scripts": {
		"build": "run-s build:*",
		"build:css": "npm run generate:css -- --minify",
		"build:remix": "remix build",
		"build:server": "esbuild --platform=node --format=cjs ./server.ts --outdir=build --bundle",
		"build:worker": "esbuild ./app/entry.worker.ts --outfile=./public/entry.worker.js --minify --bundle --format=esm --define:process.env.NODE_ENV=\"production\"",
		"dev": "run-p dev:*",
		"dev:server": "cross-env NODE_ENV=development node --inspect --require ./node_modules/dotenv/config --require ./build/server.js",
		"dev:build": "cross-env NODE_ENV=development npm run build:server -- --watch",
		"dev:remix": "cross-env NODE_ENV=development remix watch",
		"dev:worker": "esbuild ./app/entry.worker.ts --outfile=./public/entry.worker.js --bundle --format=esm --define:process.env.NODE_ENV='\"development\"' --watch",
		"dev:css": "cross-env NODE_ENV=development npm run generate:css -- --watch",
		"docker": "docker-compose up -d",
		"format": "prettier --write .",
		"generate:css": "tailwindcss -c ./tailwind.config.js -i ./styles/style.css -o ./app/styles/style.css",
		"clean": "del ./node_modules/.cache build public/build && cat /dev/null > app/styles/style.css",
		"lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
		"typecheck": "tsc -b",
		"setup": "prisma generate && prisma migrate deploy && prisma db seed",
		"start": "cross-env NODE_ENV=production node ./build/server.js",
		"validate": "run-p lint typecheck"
	},
	"prettier": {
		"arrowParens": "avoid",
		"bracketSameLine": false,
		"bracketSpacing": true,
		"embeddedLanguageFormatting": "auto",
		"endOfLine": "lf",
		"htmlWhitespaceSensitivity": "css",
		"insertPragma": false,
		"jsxSingleQuote": false,
		"printWidth": 80,
		"proseWrap": "always",
		"quoteProps": "as-needed",
		"requirePragma": false,
		"semi": false,
		"singleAttributePerLine": false,
		"singleQuote": true,
		"tabWidth": 2,
		"trailingComma": "all",
		"useTabs": true,
		"tailwindConfig": "./tailwind.config.js"
	},
	"eslintIgnore": [
		"/node_modules",
		"/build",
		"/public"
	],
	"dependencies": {
		"@js-temporal/polyfill": "^0.4.3",
		"@prisma/client": "^4.10.1",
		"@reach/alert-dialog": "^0.18.0",
		"@reach/menu-button": "^0.18.0",
		"@remix-run/express": "^1.12.0",
		"@remix-run/node": "^1.12.0",
		"@remix-run/react": "^1.12.0",
		"@remix-run/server-runtime": "^1.12.0",
		"@remix-validated-form/with-zod": "^2.0.5",
		"@tailwindcss/forms": "^0.5.3",
		"cloudinary": "^1.33.0",
		"clsx": "^1.2.1",
		"compression": "^1.7.4",
		"cross-env": "^7.0.3",
		"express": "^4.18.2",
		"file-saver": "^2.0.5",
		"framer-motion": "^7.10.3",
		"isbot": "^3.6.5",
		"morgan": "^1.10.0",
		"node-persist": "^3.1.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-modal-sheet": "^1.10.0",
		"remix-auth": "^3.4.0",
		"remix-auth-socials": "^1.0.2",
		"remix-validated-form": "^4.6.8",
		"tiny-invariant": "^1.3.1",
		"web-push": "^3.5.0",
		"zod": "^3.20.6",
		"zod-form-data": "^1.3.1"
	},
	"devDependencies": {
		"@remix-run/dev": "^1.12.0",
		"@remix-run/eslint-config": "^1.12.0",
		"@types/compression": "^1.7.2",
		"@types/eslint": "^8.21.0",
		"@types/express": "^4.17.17",
		"@types/file-saver": "^2.0.5",
		"@types/inflected": "^1.1.29",
		"@types/morgan": "^1.9.4",
		"@types/node": "^18.13.0",
		"@types/node-persist": "^3.1.3",
		"@types/react": "^18.0.28",
		"@types/react-dom": "^18.0.10",
		"@types/web-push": "^3.3.2",
		"autoprefixer": "^10.4.13",
		"cookie": "^0.5.0",
		"del-cli": "^5.0.0",
		"dotenv": "^16.0.3",
		"esbuild": "^0.15.18",
		"eslint": "^8.34.0",
		"eslint-config-prettier": "^8.6.0",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.21",
		"prettier": "^2.8.4",
		"prettier-plugin-tailwindcss": "^0.2.2",
		"prisma": "^4.10.1",
		"tailwindcss": "^3.2.6",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.1.2",
		"typescript": "^4.9.5"
	},
	"engines": {
		"node": ">=14"
	},
	"prisma": {
		"schema": "db/schema.prisma",
		"seed": "ts-node --require tsconfig-paths/register db/seed.ts"
	}
}
